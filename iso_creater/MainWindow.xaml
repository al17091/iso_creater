<Window x:Class="iso_creater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ISO 作成ツール" Height="520" Width="700">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- 入力設定 -->
            <RowDefinition Height="Auto"/> <!-- 出力設定 -->
            <RowDefinition Height="*"/>    <!-- 除外フィルタなど伸ばす -->
            <RowDefinition Height="Auto"/> <!-- 実行・進捗 -->
        </Grid.RowDefinitions>

        <!-- 2.1 入力設定エリア -->
        <GroupBox Header="入力設定" Grid.Row="0" Margin="0,0,0,8">
            <Grid Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="32"/> <!-- ソースフォルダ -->
                    <RowDefinition Height="32"/> <!-- ボリュームラベル -->
                    <RowDefinition Height="32"/> <!-- ISOファイルシステム -->
                </Grid.RowDefinitions>

                <!-- ① ソースフォルダ -->
                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">ソースフォルダ</TextBlock>
                <TextBox x:Name="SourceFolderPathTextBox" Grid.Row="0" Grid.Column="1" IsReadOnly="True" VerticalContentAlignment="Center" Margin="6,0"/>
                <Button x:Name="BrowseSourceFolderButton" Grid.Row="0" Grid.Column="2" Content="フォルダ選択" Click="BrowseSourceFolder_Click" Margin="6,0"/>

                <!-- ② ボリュームラベル -->
                <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center">ボリュームラベル</TextBlock>
                <TextBox x:Name="VolumeLabelTextBox" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" VerticalContentAlignment="Center" Margin="6,0" ToolTip="未入力の場合、選択したフォルダ名を使用します"/>

                <!-- ③ ISOファイルシステム -->
                <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center">ISOファイルシステム</TextBlock>
                <ComboBox x:Name="FileSystemComboBox" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" SelectedIndex="0" Margin="6,0">
                    <ComboBoxItem>ISO 9660 (標準)</ComboBoxItem>
                    <ComboBoxItem>Joliet (ISO 9660 + Windows向けロングファイル名対応)</ComboBoxItem>
                    <ComboBoxItem>UDF (大容量ファイルやUnicodeに強い規格)</ComboBoxItem>
                </ComboBox>
            </Grid>
        </GroupBox>

        <!-- 2.1 ④ 除外フィルタ（.gitignore構文） -->
        <GroupBox Header="除外フィルタ (.gitignore 構文)" Grid.Row="2" Margin="0,8,0,8">
            <Grid Margin="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBox x:Name="ExcludePatternsTextBox"
                         Grid.Row="0"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         TextWrapping="NoWrap"
                         Height="160"
                         ToolTip="例: *.log, bin/, /temp のように記述します"/>

                <TextBlock Grid.Row="1" Foreground="Gray" FontSize="11" Margin="0,6,0,0">
                    コメント行は # で始めます。
                </TextBlock>
            </Grid>
        </GroupBox>

        <!-- 2.2 出力設定エリア -->
        <GroupBox Header="出力設定" Grid.Row="1" Margin="0,0,0,8">
            <Grid Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="32"/>
                </Grid.RowDefinitions>

                <!-- ⑤ 保存先 -->
                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">保存先</TextBlock>
                <TextBox x:Name="SaveFilePathTextBox" Grid.Row="0" Grid.Column="1" IsReadOnly="True" VerticalContentAlignment="Center" Margin="6,0"/>
                <Button x:Name="BrowseSaveFileButton" Grid.Row="0" Grid.Column="2" Content="保存先を指定" Click="BrowseSaveFile_Click" Margin="6,0"/>
            </Grid>
        </GroupBox>

        <!-- 2.3 実行と進捗エリア -->
        <StackPanel Grid.Row="3" Orientation="Vertical" Margin="0,6,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="CreateIsoButton" Content="ISO作成" Width="120" Click="CreateIsoButton_Click" Margin="0,0,8,0"/>
            </StackPanel>

            <ProgressBar x:Name="CreationProgressBar" Height="20" Minimum="0" Maximum="100" Margin="0,8,0,0" Value="0"/>
        </StackPanel>
    </Grid>
</Window>
